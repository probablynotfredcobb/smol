<%= form_with(model: url, local: true) do |form| %>
  <% if url.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(url.errors.count, "error") %> prohibited this url from being saved:</h2>

      <ul>
      <% url.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <li><%= 'Please use http: or https:' %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :link %>
    <%= form.text_field :link, id: :url_link %>
  </div>

  <div class="field">
    <%= form.label :short %>
    <%= form.hidden_field :short, id: :url_short, value: Faker::Number.hexadecimal(4) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
